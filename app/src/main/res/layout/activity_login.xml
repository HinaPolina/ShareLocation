<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hinapolina.com.sharelocation.activities.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:src="@drawable/happy_people"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#62000000"/>

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_location_logo"
        android:layout_marginTop="137dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:id="@+id/fingerprint_login_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/icon_fingerprint"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/splash_logo"
        android:layout_toEndOf="@+id/splash_logo"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:id="@+id/textView3" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/margin"
        android:layout_weight="1"
        android:paddingBottom="15dp"
        android:layout_marginLeft="@dimen/margin"
        android:paddingTop="15dp"
        fb:com_facebook_login_text="Facebook"
        android:layout_above="@+id/sign_in_button"
        android:layout_alignParentStart="true" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_weight="1"
        android:layout_above="@+id/fingerprint_login_button"
        android:layout_centerHorizontal="true" />


</RelativeLayout>


