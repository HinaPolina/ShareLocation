<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_details_profile_container"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/header"
    android:orientation="horizontal">

    <TextView
            android:id="@+id/tv_profile_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:text="User name"
            android:textStyle="bold"
        android:layout_alignBottom="@+id/img_profile_details"
        android:layout_toEndOf="@+id/img_profile_details" />

    <ImageView
        android:id="@+id/img_profile_details"
        android:layout_width="@dimen/profile_img_size"
        android:layout_height="@dimen/profile_img_size"
        android:layout_marginLeft="@dimen/header_margin_left"
        android:src="@android:color/black"
        android:layout_marginBottom="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
